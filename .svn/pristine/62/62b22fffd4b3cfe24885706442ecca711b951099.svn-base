body {
    background-color: #ffffff;
    font-size: 12px;
    font-family: Verdana, "Verdana CE",  Arial, "Arial CE", "Lucida Grande CE", lucida, "Helvetica CE", sans-serif;
    color: #000000;
    margin: 10px;
}

.ui-dialog-content {
    font-size: 13px;
}


.ui-widget .ui-widget {
    font-size:0.8em;
}

.ui-panel-content {
    font-size: 14px;
}
.ui-tabs .ui-tabs-nav {
    font-size:12px;
}

.ui-tabs-panel {
    font-size: 12px;
}
.ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
    background: -moz-linear-gradient(center top , rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0)) repeat scroll 0 0 #C4C4C4;
    color: #4F4F4F;
    font-weight: bold;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.698);
}
.ui-wizard-step-title {
    float: left;
    font-size: 12px;
    margin: 0 2px 0 0;
    padding: 0.3em;
}

.ui-widget-header {
    color: #333333;
    font-size: 12px;
    font-weight: bold;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.698);
}

.ui-datatable table {
    font-size:  12px;
}


.ui-button-text-only .ui-button-text {
    font-size: 10px;
}

#footer .copyright {
    float:left;
}

#footer p {
    font-size:smaller;
    margin:0;
    padding:2px 0 0;
    text-align:center;
}

#ui-growl-item {
    top:120px;
    left:20px;
}

.odd{
    background: red;
}
.goodTran{
    background: #6eac2c;
}
.topupstatus{
    background: #EDE18D;
}
.btn{
    background: none;
}
.ui-messages-info{
    width: 450px;
    color: green;
    background: #ffffff;
    font-weight: normal;
    border: none;
    font-size: small;
    margin-top: 7px;
}

.ui-messages-error{
    width: 450px;
    color: red;
    background: #ffffff;
    border: none;
    font-size: small;
    margin-top: 7px;

}

.popup-verification-tab{
    font-size:130%;
}

.popup-verification{
    font-size:110%;
}

.popup-log{
    font-size:110%;
    overflow: auto;
    width: 100%;
}

a,
a:hover,
a:focus,
a:active
{
    text-decoration: none;
}

a:hover {
    color: red;
}

img
{
    border: medium none;
}

.view
{
    background-image: url('../icons/view.png');
    background-repeat: no-repeat;
    padding-left: 12px;  /* width of the image plus a little extra padding */
    text-decoration: underline;
    color: red;
}
.ui-layout-unit ui-widget ui-widget-content ui-corner-all ui-layout-north ui-layout-pane ui-layout-pane-north
{
    height: 65px;
}
.ui-datatable-odd{
    background: #DDDDDD;
}

.failStatus,.inactiveStatus{
    color: red;
}

.inProgressStatus{
    color: blue;
}
.successStatus{
    color: green;
}

.deleteButton,.enableORdisableButton
{
    background-repeat: no-repeat;
    padding-left: 12px;  /* width of the image plus a little extra padding */
    color: red;
}

.deleteButton
{
    background-image: url('../icons/deleteBin.png');
}
.enableORdisableButton
{
    background-image: url('../icons/enableORdisable.png');
}
.input-mask{
    color: red;
    background: white;
    background-color: green;
}

.panelGridColumn td{
    width : 80px;
}

.columnLabelStyle  { 
    width: 130px;
    font-size: 12px;
    font-family: sans-serif;

}

.columnLabelStyle2  { 
    width: 130px;
}

.columnBlankLabelStyle  { 
    width: 10px;
}
.ui-growl {
    position: fixed;
    right: 20px;
    top: 60px;
    width: 301px;
}

.ui-accordion .ui-accordion-header a {
    display: block;
    font-size: 1em;
    padding: 0.5em 0.5em 0.5em 2.2em;
    width: 315px;
}
.ui-accordion .ui-accordion-header {
    border-radius: 15px 15px 15px 15px;
    cursor: pointer;
    margin-top: 1px;
    position: relative;
}

.ui-accordion .ui-accordion-content {
    border-top: 0 none;
    margin-bottom: 2px;
    margin-left: -20px;
    margin-top: -2px;
    overflow: auto;
    padding: 1em 2.2em;
    position: relative;
    top: 1px;
    width:100%;
}

.ui-widget-header a {

    margin-right: 10px;
}


.ui-layout, .ui-layout-doc, .ui-layout-unit, .ui-layout-wrap, .ui-layout-bd, .ui-layout-hd{
    border: none;
    width:700px;
    background:#ededed;
    margin-left: 30px;
}


